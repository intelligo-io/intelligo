{
  "name": "api.chatbots.mn",
  "private": true,
  "version": "1.0.0",
  "description": "Chatbots.mn API",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "studio:install": "cd studio && npm install",
    "studio:build": "cd studio && npm run build --aot -prod",
    "marketplace:install": "cd marketplace && npm install",
    "marketplace:build": "cd marketplace && npm run build --aot -prod",
    "simulator:install": "cd simulator && npm install",
    "simulator:build": "cd simulator && npm run build --aot -prod",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "heroku-prebuild": "npm run studio:install && npm run marketplace:install && npm run simulator:install",
    "heroku-postbuild": "npm run studio:build && npm run marketplace:build && npm run simulator:build"
  },
  "engines": {  
    "node": "12.13.0",
    "npm": "6.x"
  },
  "cacheDirectories": ["studio/node_modules", "node_modules", "marketplace/node_modules", "simulator/node_modules"],
  "dependencies": {
    "@nestjs/common": "^6.9.0",
    "@nestjs/core": "^6.9.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.9.0",
    "@nestjs/swagger": "^3.1.0",
    "@types/swagger-ui-express": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "intelligo": "^1.3.0",
    "mongoose": "^5.7.8",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "serve-static": "^1.14.1",
    "swagger-ui-express": "^4.1.2",
    "uptime.js": "^1.3.1",
    "vhost": "^3.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.11.3",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.22",
    "@types/mongoose": "^5.5.30",
    "@types/node": "^12.12.6",
    "@types/passport-jwt": "^3.0.2",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
